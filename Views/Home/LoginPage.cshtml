@model LoginCredentials;
<form class="form-signin" style="padding: 15px; margin: 0 auto; width: 100%; max-width: 420px;" asp-action="Login" asp-controller="Home" method="POST">
    <div class="text-center mb-4">
        <img class="mb-4" src="~/images/yoda2.jpg" alt="image" width="300" height="200">
        <h1>YodaChat</h1>
        <p>Sign in, you must!</p>
    </div>
    <div class="form-label-group">
        <span asp-validation-for="Email"></span>
        <input style="margin-top: 10px;" class="form-control" asp-for="Email" placeholder="Email">
    </div>
    <div class="form-label-group">
            <span asp-validation-for="Password"></span>
        <input style="margin-top: 10px;" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <button style="margin-top: 10px;" class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
    <div style="margin-top: 20px;" class="text-center">
        <a href="/">Not registered?</a>
    </div>
    
</form>